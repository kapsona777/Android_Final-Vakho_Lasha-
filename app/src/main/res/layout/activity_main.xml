<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="#CDCDCD">

    <ImageView
        android:layout_width="183dp"
        android:layout_height="162dp"
        android:layout_gravity="center_horizontal"
        android:src="@mipmap/Policee"></ImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="სისტემაში შესასვლელად აირჩიეთ თქვენთვის სასურველი მეთოდი:"
        android:textSize="20dp"
        android:layout_marginBottom="30px"
        android:textColor="#000000"
        android:layout_marginTop="160dp"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp">
    </TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ან "
        android:textSize="60px"
        android:layout_marginBottom="30px"
        android:textColor="#000000"
        android:layout_marginTop="330dp"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp">
    </TextView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_marginTop="50dp">

        <EditText
            android:layout_marginTop="50dp"
            android:id="@+id/techN"
            android:layout_width="380dp"
            android:layout_height="150px"
            android:hint="ტექ-პასპორტის ნომერი">
        </EditText>
        <EditText
            android:id="@+id/carN_1"
            android:layout_width="380dp"
            android:layout_height="150px"
            android:hint="სახელმწიფო ნომერი">
        </EditText>
        <EditText
            android:id="@+id/protocolN"
            android:layout_width="380dp"
            android:layout_height="150px"
            android:hint="ქვითრის ნომერი"
            android:layout_marginTop="40dp">
        </EditText>
        <EditText
            android:id="@+id/carN_2"
            android:layout_width="380dp"
            android:layout_height="150px"
            android:hint="სახელმწიფო ნომერი">
        </EditText>
        
        <ImageView
            android:id="@+id/captchaPhoto"
            android:layout_marginTop="30dp"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:src="@mipmap/captcha">
        </ImageView>
        <EditText
            android:id="@+id/captchaTxt"
            android:layout_width="380dp"
            android:layout_height="150px"
            android:hint="captcha">
        </EditText>

        <Button
            android:id="@+id/search"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="#FA4040"
            android:text="ძებნა"
            android:textColor="#FFFFFF"
            android:layout_gravity="right"
            android:layout_marginTop="10dp">
        </Button>
    </LinearLayout>
</FrameLayout>